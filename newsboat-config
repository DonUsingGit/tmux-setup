# Auto-refresh feeds every 10 minutes
auto-reload yes
reload-time 10

# Colors for better readability
# color background black
#color listnormal white black
#color listfocus yellow black bold
#color info cyan black bold
#color title green black bold

# Keybindings for Vim-style navigation
unbind-key j
unbind-key k
bind-key j down
bind-key k up
bind-key n next-unread
bind-key p prev-unread

# Set an external browser for opening links
browser "firefox %u"

# Limit max feed items
max-items 100
